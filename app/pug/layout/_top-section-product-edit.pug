        .top-section-left
            a.cancel(href='#') cancel

            img.top-section-img(src="img/product/tmp_product.jpg", alt="#")
            .top-section-descr
                h5.top-section-title Indian Creek Panel Amish Bed
                ul
                    li
                        a(href="#").pl-0 MOVE FROM CART TO WISHLIST
