section.top-section.d-block.mb-5(style="position:relative;")
  .container.d-flex.justify-content-between.align-items-center
    .top-section-left
      img.top-section-img(src="img/product/tmp_product.jpg", alt="#")
      .top-section-descr
        h5.top-section-title Indian Creek Panel Amish Bed
        ul
          li #[a(href="#").pl-0 Product details]
          li #[a(href="#") Customize]
    .top-section-right
      .product-price.mb-0
        .product-price-value $1,371.00
        .product-price-shipping
          span + $30.40
          |  Shipping
      form.form.d-flex.justify-content-between.align-items-center
        .qty.ml-3
          | Qty:
          input.form-control.qty-input(type='number', name='qty', value='1')
        a(href="#").btn.btn-warning.btn-sm Add to cart
        a(href="#").btn.btn-outline.d-inline-block Save to Wishlist

