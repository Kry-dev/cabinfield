mixin input-number(label, name, id, val, price)
  //-product custom input number (modal-customizr-popup-1)
  .ctrl
    button.ctrl-btn.ctrl-btn-decr -
    button.ctrl-btn.ctrl-btn-incr +
    label(for=name).ctrl-counter=label
      input(id=id, type='text', name=name, value=val)
    .ctrl-price + #{price}


